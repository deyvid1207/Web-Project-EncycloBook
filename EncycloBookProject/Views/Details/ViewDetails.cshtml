                            <p>10 * Presets.Released in 2020.</p>
                        </div>
                    </label>
                    <input type="radio" id="collection2" name="collection">
                    <label for="collection2">
                        <div class="left_box">
                            <div class="left_box_collection">
                                <div class="radio_button">
                                    <span></span>
                                    <h4>Collection 02</h4>
                                </div>
                                <p>$29</p>
                            </div>
                            <p>10 * Presets.Released in 2021.</p>
                        </div>
                </div>
            </div>
            <div class="custom-right-side">
                <h3>@type.ToString() Details</h3>
               
                <div class="input_div">
                    <div class="input_text _input">
                        <dt>Title</dt>
                        <dd>@Model.Title</dd>
                        <i class="fa fa-credit-card"></i>
                    </div>
                    <div class="cvv_month">
                        <div class="input_text ">
                            <h5>Description</h5>
                            <label>@Model.Description</label>
                         
                        </div>
                        <div class="input_text ">
                            <h6>Family</h6>
                            @if (type == "Animal")
                            {
                                 
                                <label>@a.AnimalClass</label>
                            }
                            else if (type == "Plant")
                            {
                                <label>@p.PlantClass</label>
                            }
                            else if (type == "Fungus")
                            {
                                <label>@f.FungusClass</label>
                            }
                            else if (type == "Bacteria")
                            {
                                <label>@b.BacteriaFamily</label>
                            }
                            else if (type == "Virus")
                            {
                                <label>@v.VirusFamily</label>
                            }

                           
                        </div>
                    </div>
                </div>
                <div class="input_text">   </div>
                <div class="billing">
                    <div class="input_text">
 
                    </div>
                    <div class="zip_state">   </div>
                </div>
                <div class="input_text">   </div>
                <div class="bill_content">
                    <div class="bill_content_text">
                  
                    </div>
                    <div class="bill_content_text">
                     
                    </div>
                    <div class="bill_content_text total">
                    
                    </div>
                </div>
                <div class="pay">
            
                    <div class="payemnts">
                    
                    </div>
                    <div class="powered">
                       
                     </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

