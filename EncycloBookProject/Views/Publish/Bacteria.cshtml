@using EncycloBookServices.Models;
@using EncycloData.Models;

@model BacteriaWithSymptomsViewModel;
<style>

    .post-view {
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 1000em;
        margin: 0 auto;
        margin-top: 10em;
    }

    .max-wd-w {
        max-width = 40%;
    }
    .top-heading {
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-control {
        margin-bottom: 10px;
    }

    .width-control {
        max-width: 50%
    }


    label {
        font-weight: bold;
    }

    textarea {
        height: 120px;
    }

    .poer-cs {
        margin-left: 4em;
    }

    .poer-cs1 {
        margin-left: 1.9em;
    }

    .poer-cs2 {
        margin-left: 6em;
    }

    .post-view .row {
        margin-bottom: 15px;
    }

    .maxdc {
        min-width: 80%;
    }

    .post-view .row .form-group {
        margin-bottom: 0;
    }

    .width-plt {
        min-width: 120%;
    }

    .width-plt-r {
        min-width: 90%;
    }

    .poer-cs2-p {
        margin-left: 4em;
    }

    .plt-bt-m {
        min-width: 8em;
    }

    .plt-div-m {
        margin-left: 22em;
    }

    .mrg-sd {
        margin-top: 5em;
        margin-right: 2em;
    }
</style>

<div class="post-view">
    <h1 class="top-heading">Post a Bacteria</h1>
    <form method="post" class="centr-plt">
        <div class="row maxdc">
            <div class="col-md-6 width-plt-r">
                <div class="form-group">
                    <label class="poer-cs" for="inputEmail4">Bacteria Name</label>
                    <input class="form-control" id="inputEmail4" asp-for="@Model.DeadlyBacteria.Title" placeholder="Bacteria Name">
                </div>
                <div class="form-group">
                    <label class="poer-cs1" for="inputPassword4">Bacteria Image link</label>
                    <input asp-for="@Model.DeadlyBacteria.ImgURL" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <label class="poer-cs" for="inputPassword4">Bacteria Family</label>
                    <input class="form-control width-control-plt" asp-for="@Model.DeadlyBacteria.BacteriaFamily" placeholder="Bacteria Family">
                </div>
 
            </div>
            <div class="col-md-6 width-plt mrg-sd">
                <label class="poer-cs max-wd-w" for="Safety">Safety</label>
                <select name="Safety" id="Safety" class="width-control custom-select selcenter  my-1 mr-sm-2 form-control-lg">
                    <option selected>Select...</option>
                    <option value="Deadly">Deadly</option>
                    <option value="Safe">Safe</option>
                </select>
                <div id="only-deadly"  style="display:none"class="form-group">
                    <label  class="poer-cs1"  for="inputPassword4">Bacteria Host</label>
                    <select name="Host" id="Host" class=" width-control custom-select selcenter   my-1 mr-sm-2 form-control-lg">
                        <option selected>Select...</option>
                        <option value="Animals">Animals</option>
                        <option value="Plants">Plants</option>
                        <option value="Fungus">Fungus</option>
                        <option value="Bacteria">Bacteria</option>
                        <option value="Virus">Virus</option>
                    </select>
                </div>
                <div id="only-deadly1" style="display:none" class="form-group">
                    <label class="poer-cs" for="inputPassword4">Bacteria Symptom</label>
                    <select name="symptoms" id="symptoms" class=" width-control custom-select selcenter   my-1 mr-sm-2 form-control-lg">
                        <option selected>Select...</option>
                        @foreach (var item in Model.SymptomList)
                        {
                            <option value="@item.Name">@item.Name</option>
                        }


                    </select>
                </div>
                </div>
                <div class="form-group">
                <label class="poer-cs2-p" for="description">Bacteria Description</label>
                <textarea class="form-control width-control-plt" asp-for="@Model.DeadlyBacteria.Description" placeholder="Bacteria Description"></textarea>
                <label class="poer-cs2-p" for="Discovered">Founder</label>

                <input class="form-control" asp-for="@Model.DeadlyBacteria.DiscoveredBy" placeholder="Name">
                 

            </div>
            <div class="form-group">
                <label for="year">Year discovered</label>
                <input class="form-control" type="date" id="year" asp-for="@Model.DeadlyBacteria.YearDiscovered" min="-1000" max="2023" placeholder="Year">
            </div>
            </div>
       
        <div class="plt-div-m">
            <button type="submit" class="btn btn-primary plt-bt-m">Post!</button>
            <p style="font:italic">if you select "Select..." on any of the drop down menus, it will automatically set to the first value</p>
        </div>
    </form>
</div>
<script src="~/js/dbacteria.js" asp-append-version="true"></script>