@using EncycloBookServices.Models;
@using EncycloData.Models;

@model FungusWithSymptomsViewModel
<style>

    .post-view {
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 1000em;
        margin: 0 auto;
        margin-top: 10em;
    }

    .top-heading {
        font-size: 24px;
        margin-bottom: 20px;
        text-align: center;
    }

    .form-control {
        margin-bottom: 10px;
    }

    .width-control {
        max-width: 50%
    }


    label {
        font-weight: bold;
    }

    textarea {
        height: 120px;
    }

    .poer-cs {
        margin-left: 4em;
    }

    .poer-cs1 {
        margin-left: 1.9em;
    }

    .poer-cs2 {
        margin-left: 6em;
    }

    .post-view .row {
        margin-bottom: 15px;
    }

    .maxdc {
        min-width: 80%;
    }

    .post-view .row .form-group {
        margin-bottom: 0;
    }

    .width-plt {
        min-width: 120%;
    }

    .width-plt-r {
        min-width: 90%;
    }

    .poer-cs2-p {
        margin-left: 4em;
    }

    .plt-bt-m {
        min-width: 8em;
    }

    .plt-div-m {
        margin-left: 22em;
    }
</style>

<div class="post-view">
    <h1 class="top-heading">Post a Fungus</h1>
    <form method="post" class="centr-plt">
        <div class="row maxdc">
            <div class="col-md-6 width-plt-r">
                <div class="form-group">
                    <label class="poer-cs" for="inputEmail4">Fungus Name</label>
                    <input class="form-control" id="inputEmail4" asp-for="@Model.ParasiticFungus.Title" placeholder="Fungus Name">
                </div>
                <div class="form-group">
                    <label class="poer-cs1" for="inputPassword4">Fungus Country of Origin</label>
                    <input class="form-control" id="inputPassword4" asp-for="@Model.ParasiticFungus.Location" placeholder="Fungus Country">
                </div>
                <div class="form-group">
                    <label class="poer-cs1" for="inputPassword4">Fungus Image link</label>
                    <input asp-for="@Model.ParasiticFungus.ImgURL" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <label class="poer-cs" for="inputPassword4">Fungus Family</label>
                    <input class="form-control width-control-plt" asp-for="@Model.ParasiticFungus.FungusClass" placeholder="Fungus Family">
                    <label class="poer-cs" for="inputPassword4">Discovered by</label>
                    <input class="form-control" asp-for="@Model.ParasiticFungus.DiscoveredBy" placeholder="Name">


                </div>
                <div class="form-group">
                    <label for="year">Year discovered</label>
                    <input class="form-control" type="number" id="year" asp-for="@Model.ParasiticFungus.YearDiscovered.Year" min="-1000" max="2023" placeholder="Year">
                </div>

            </div>
            <div class="col-md-6 width-plt">
                <div class="form-group">
                    <label class="poer-cs" for="color">Fungus Color</label>
                    <select name="color" id="color" class="custom-select selcenter  my-1 mr-sm-2 form-control-lg">
                        <option selected>Select...</option>
                        <option value="Blue">Blue</option>
                        <option value="Green">Green</option>
                        <option value="White">White</option>
                        <option value="Purple">Purple</option>
                        <option value="Black">Black</option>
                        <option value="Red">Red</option>
                        <option value="Yellow">Yellow</option>
                        <option value="Gray">Gray</option>
                        <option value="Pink">Pink</option>
                        <option value="Cyan">Cyan</option>
                        <option value="Dark blue">Dark blue</option>
                        <option value="Dark green">Dark green</option>
                        <option value="Light green">Light green</option>
                        <option itemid="Different" value="Different">Different</option>
                    </select>
                    <input style="display:none" asp-for="@Model.ParasiticFungus.Color" placeholder="Different color" id="colorInput">
                </div>
                <div class="form-group">
                    <label class="poer-cs" for="leaveType">Fungus Gills Type</label>
                    <select name="gillType" id="gillType" class="custom-select selcenter  my-1 mr-sm-2 form-control-lg">
                        <option selected>Select...</option>
                        <option value="Adnate">Adnate</option>
                        <option value="Adnexed">Adnexed</option>
                        <option value="Sinuate">Sinuate</option>
                        <option value="Emarginate">Emarginate</option>
                        <option value="Seceding">Seceding</option>
                        <option value="Decurrent">Decurrent</option>
                        <option value="Subdecurrent">Subdecurrent</option>
                        <option value="Free">Free</option>
                        <option value="Collared">Collared</option>
                        <option value="None">None</option>
             
                    </select>
                    <input style="display:none" asp-for="@Model.ParasiticFungus.GillsType" placeholder="Different gill type" id="leaveTypeInput">
                </div>
                <div class="form-group">
                    <label class="poer-cs" for="Safety">Safety</label>
                    <select name="Safety" id="Safety" class="custom-select selcenter  my-1 mr-sm-2 form-control-lg">
                        <option selected>Select...</option>
                        <option value="Poisonous">Poisonous</option>
                        <option value="Eddible">Eddible</option>
                    </select>
                    <label class="poer-cs" for="Safety">Parasiticy</label>
                    <select name="Parasitic" id="Parasitic" class="custom-select selcenter  my-1 mr-sm-2 form-control-lg">
                        <option selected>Select...</option>
                        <option value="Not parasitic">Non parasitic</option>
                        <option value="Parasitic">Parasitic</option>
                    </select>
                    <div id="only-deadly-f" style="display:none" class="form-group">
                        <label class="poer-cs1" for="inputPassword4">Fungus Host</label>
                        <select name="Host" id="Host" class=" width-control custom-select selcenter   my-1 mr-sm-2 form-control-lg">
                            <option selected>Select...</option>
                            <option value="Animals">Animals</option>
                            <option value="Plants">Plants</option>
                            <option value="Fungus">Fungus</option>
                            <option value="Bacteria">Bacteria</option>
                            <option value="Virus">Virus</option>
                        </select>
                    </div>
                    <div id="only-deadly1-f" style="display:none" class="form-group">
                        <label class="poer-cs" for="inputPassword4">Fungus Symptom</label>
                        <select name="symptoms" id="symptoms" class=" width-control custom-select selcenter   my-1 mr-sm-2 form-control-lg">
                            <option selected>Select...</option>
                            @foreach (var item in Model.SymptomList)
                            {
                                <option value="@item.Name">@item.Name</option>
                            }
                            </select>
                            <input style="display:none" asp-for="@Model.ParasiticFungus.GillsType" placeholder="Different leave type" id="leaveTypeInput">
                </div>
                <div class="form-group">
                    <label class="poer-cs2-p" for="description">Fungus Description</label>
                        <textarea class="form-control width-control-plt" asp-for="@Model.ParasiticFungus.Description" placeholder="Fungus Description"></textarea>
                </div>
            </div>
        </div>
        <div class="plt-div-m">
            <button type="submit" class="btn btn-primary plt-bt-m">Post!</button>
            <p style="font:italic">if you select "Select..." on any of the drop down menus, it will automatically set to the first value</p>
        </div>
     </div></form>
</div>
<script src="~/js/parfungus.js" asp-append-version="true"></script>
<script src="~/js/site.js" asp-append-version="true"></script>